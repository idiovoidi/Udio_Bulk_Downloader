{
  "manifest_version": 3,
  "name": "Udio Library Mapper",
  "version": "2.0.0",
  "description": "Map and export your Udio library structure (folders and songs) - Modular Edition",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.udio.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.udio.com/*"],
      "js": [
        "logger.js",
        "modules/storage.js",
        "modules/dom-utils.js",
        "modules/song-extractor.js",
        "modules/folder-mapper.js",
        "content/diagnostics.js",
        "content/message-handler.js",
        "content/content-main.js"
      ],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
